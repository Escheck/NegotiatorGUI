         	<fileset dir="${build}" includes="negotiator/**, agents/**, misc/**"/>
			<fileset dir="${tmp}"/>
	    	<manifest>
      			<attribute name="Built-By" value="${user.name}"/>
				<attribute name="Main-Class" value="negotiator/gui/NegoGUIApp"/>
				<attribute name="Class-Path" value="."/>
    		</manifest>		
		</jar>	         		
    </target>
	
